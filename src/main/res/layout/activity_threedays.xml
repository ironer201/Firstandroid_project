<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/attendence"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/upbg"
    android:padding="16dp"
    tools:context=".threedays">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Attendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 Days absent list"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <!--        android:background="@drawable/custom_edit_text"-->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/back_arrow_btn"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/todo"
            />
    </RelativeLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_line"
        android:layout_margin="40dp">
        <!--                first row-->
        <TableRow

            android:backgroundTint="@color/white"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course code"
                android:background="@drawable/custom_line"
                android:textColor="@android:color/black"
                android:padding="10sp"
                android:textSize="20sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/custom_line"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="@string/ID"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/custom_line"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="Name"
                android:textColor="@android:color/black"
                android:textSize="20sp" />


        </TableRow>
        <!--       2nd row-->
        <TableRow

            android:background="@color/white"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="CSE-2210"
                android:textColor="@android:color/black"
                android:padding="10sp"
                android:background="@drawable/custom_line"
                android:textSize="20sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textColor="@android:color/black"
                android:background="@drawable/custom_line"
                android:padding="10sp"
                android:textSize="20sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@android:color/black"
                android:background="@drawable/custom_line"
                android:padding="10sp"
                android:textSize="20sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />


        </TableRow>
        <!--       -->


    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/miss"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Submit"
            android:background="@drawable/custom_edit_text"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>