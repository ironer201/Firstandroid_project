<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/upbg"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".static_asi">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/back_arrow_btn"
            android:contentDescription="@string/todo"
            android:layout_alignParentStart="true" />

        <!-- Centered Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment Status"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <TableLayout
        android:id="@+id/main_table"
        android:layout_width="200dp"
        android:layout_height="336dp"
        android:layout_gravity="center"
        android:layout_marginTop="65dp"
        android:background="#ACE9D5">

        <TableRow>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#17D0AD"
                android:gravity="center"
                android:padding="8dp"
                android:text="Course code"
                android:textColor="@android:color/black" />




        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:padding="8dp"
                android:gravity="center"
                android:text="CSE-2211"
                android:textColor="@color/black"
                android:textSize="20dp" />



        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:padding="8dp"
                android:text="CSE-2213"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/black" />



        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:padding="8dp"
                android:text="CSE-2215"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black" />



        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:padding="8dp"
                android:text="EEE-2265"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black" />



        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:padding="8dp"
                android:text="CSE-2247"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black"/>
        </TableRow>
    </TableLayout>
</LinearLayout>